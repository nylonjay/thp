<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thp.csii.com.activities.InvoiceInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/re_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否开发票(邮费到付)"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <thp.csii.com.views.ShSwitchView
            android:id="@+id/invo_check"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:id="@+id/re_2"
        android:layout_marginTop="@dimen/my_vertical_margin"
        android:layout_below="@+id/re_1">
    <ImageView
        android:id="@+id/position_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/u144"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 请填写收货信息"
            android:textColor="@color/text_gray"
            android:layout_toRightOf="@+id/position_info"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/re_2"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/re_3"
        android:layout_marginTop="@dimen/my_vertical_margin"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票抬头"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:hint="请输入个人或者单位的名称"
            android:paddingLeft="10dp"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/tv_1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/u87"
            android:id="@+id/ed_taitou"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_3"
        android:layout_marginTop="@dimen/my_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票内容:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />
        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_top"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_1"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/rb_selector"
                android:button="@null"
                android:text="日用商品"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/rb_selector"
                android:button="@null"
                android:text="礼品"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/rb_selector"
                android:button="@null"
                android:text="劳保用品"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_gray" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_5"
        android:layout_below="@+id/re_4"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:background="@drawable/u349"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:gravity="center" />
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
