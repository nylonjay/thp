<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thp.csii.com.activities.AuthenticationActivity">

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:layout_below="@+id/authen_desc"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请设置快捷支付密码"/>

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_number"
        android:layout_width="match_parent"
        android:layout_below="@+id/ed_name"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请确认快捷支付密码"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/net_step_bg"
        android:text="设置支付密码"
        android:textColor="@color/white"
        android:layout_below="@+id/ed_number"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/submit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/net_step_bg"
        android:text="修改支付账户"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/modifycounts"
        android:layout_below="@+id/submit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
