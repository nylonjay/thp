<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="thp.csii.com.activities.BindCardSucceedActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <RelativeLayout
        android:id="@+id/re_1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/icon_bind_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bind_ok"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"/>
        <LinearLayout
            android:layout_below="@+id/icon_bind_ok"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_unit_height"
            android:layout_marginBottom="@dimen/unit_height"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_bindok"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_vertical_margin"
                android:textSize="20dp"
                android:text="绑卡成功"
                android:textColor="@color/text_red"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/li_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:orientation="horizontal"
        android:layout_below="@+id/re_1"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="@dimen/small_unit_height"
            android:text="去剁手"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@drawable/bind_selector"
            android:id="@+id/btn_tobuy" />
        <Button
            android:layout_width="100dp"
            android:layout_height="@dimen/small_unit_height"
            android:text="查看购物卡"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="@dimen/small_unit_height"
            android:background="@drawable/bind_selector"
            android:id="@+id/tv_tosp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/re_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unit_height"
        android:layout_below="@+id/li_2">
        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="@color/text_dark_gray"
            android:layout_centerInParent="true"
            android:text="使用购物卡"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_center"
            android:layout_alignParentLeft="true"
            android:background="@color/line_gray"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@+id/tv_center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/line_gray"/>
    </RelativeLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14dp"
            android:id="@+id/tv_1"
            android:layout_below="@+id/re_3"
            android:text="1.线下购物卡支付"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:id="@+id/tv_de"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_1"
            android:text="在天虹门店购物，打开付款码扫码付款"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_below="@+id/tv_de"
            android:src="@drawable/img_1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14dp"
            android:id="@+id/tv_wef"
            android:layout_below="@+id/img1"
            android:text="2.线上购物卡支付"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:id="@+id/tv_vc"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_wef"
            android:text="线上购物订单付款页面，选择购物卡付款"/>

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/img_2"
            android:layout_below="@+id/tv_vc"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/img2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:text="3.停车缴费购物卡支付"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:text="停车缴费付款页面，选择购物卡付款"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:text="4.线下换取实体卡"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:text="您在线上购买的购物卡，可至实体店换取等额实体卡"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/my_vertical_margin"
            android:text="5.微信转赠"/>
        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="@dimen/my_vertical_margin"
            />
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
