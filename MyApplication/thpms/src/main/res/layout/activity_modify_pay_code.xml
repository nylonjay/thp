<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_gray"
    tools:context="thp.csii.com.activities.AuthenticationActivity">

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_pay_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:layout_below="@+id/authen_desc"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:layout_alignParentTop="true"
        android:textSize="14dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请输入当前支付密码"/>

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_new_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:textSize="14dp"
        android:ellipsize="start"
        android:layout_below="@+id/ed_pay_code"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请设置新的支付密码"/>

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_confirm_code"
        android:layout_width="match_parent"
        android:layout_below="@+id/ed_new_code"
        android:layout_height="@dimen/unit_height"
        android:textSize="14dp"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请确认新的支付密码"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/next_step_gray"
        android:text="确认提交"
        android:textColor="@color/white"
        android:clickable="false"
        android:layout_below="@+id/ed_confirm_code"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/submit"/>

</RelativeLayout>
