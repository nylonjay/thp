<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--

    <thp.csii.com.views.Mini_passwordView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/ll_close">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u318"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            android:textColor="@color/pay_text_color"
            android:gravity="center"
            android:text="设置支付密码，用于购物卡支付验证"/>

        <com.csii.powerenter.PEEditText
            android:id="@+id/true_peed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_input_area"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_input_area"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/ll_tvs"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_edit1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:id="@+id/password_edit2"
                android:layout_width="0dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:id="@+id/password_edit3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:id="@+id/password_edit4"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:id="@+id/password_edit5"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:id="@+id/password_edit6"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLength="1"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>





        <ImageView
            android:id="@+id/myprogress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_refresh"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
