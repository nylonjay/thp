<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--

    <thp.csii.com.views.Mini_passwordView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/ll_close">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u236"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/text_dark_gray"
            android:gravity="center"
            android:text="输入支付密码"/>

        <com.csii.powerenter.PEEditText
            android:id="@+id/true_peed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_input_area"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/ll_tvs"
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_input_area"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_edit1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="@dimen/small_unit_height"
                android:textColor="@color/black"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/password_edit2"
                android:layout_width="0dip"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="@dimen/small_unit_height"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/password_edit3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="@dimen/small_unit_height"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/password_edit4"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="@dimen/small_unit_height"
                android:textColor="@color/black"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/password_edit5"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="@dimen/small_unit_height"
                android:background="@null"
                android:padding="5dp"
                android:textSize="16sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/password_edit6"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="@dimen/small_unit_height"
                android:background="@null"
                android:maxLength="1"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>






        <ImageView
            android:id="@+id/myprogress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_refresh"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
