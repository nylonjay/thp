<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="thp.csii.com.activities.DetailMyCardActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/new_sp_bg"
            android:id="@+id/img_head"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="余额"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textColor="#fe473c"
                android:textSize="12dp"
                android:text="￥"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fe473c"
                android:text="500.00"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="购物卡详情"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑卡日期:"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效日期:"
                android:textColor="@color/black"/>
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"/>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/re_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_height"
            android:layout_below="@+id/li_2">
            <TextView
                android:id="@+id/tv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:textColor="@color/text_dark_gray"
                android:layout_centerInParent="true"
                android:text="使用购物卡"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_center"
                android:layout_alignParentLeft="true"
                android:background="@color/line_gray"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_toRightOf="@+id/tv_center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@color/line_gray"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14dp"
            android:id="@+id/tv_1"
            android:layout_below="@+id/re_3"
            android:text="1.线下购物卡支付"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:id="@+id/tv_de"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_1"
            android:text="在天虹门店购物，打开付款码扫码付款"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_below="@+id/tv_de"
            android:src="@drawable/img_1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14dp"
            android:id="@+id/tv_wef"
            android:layout_below="@+id/img1"
            android:text="2.线上购物卡支付"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:id="@+id/tv_vc"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_wef"
            android:text="线上购物订单付款页面，选择购物卡付款"/>

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/img_2"
            android:layout_below="@+id/tv_vc"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/img2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                android:text="3.停车缴费购物卡支付"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                android:text="停车缴费付款页面，选择购物卡付款"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                android:text="4.线下换取实体卡"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                android:text="您在线上购买的购物卡，可至实体店换取等额实体卡"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                android:text="5.微信转赠"/>
            <TextView
                android:id="@+id/tv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="@dimen/my_vertical_margin"
                />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
