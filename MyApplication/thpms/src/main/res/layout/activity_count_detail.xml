<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thp.csii.com.activities.CountDetailActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/u349"
        android:text="查看账户详情"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/qryDetails"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/u349"
        android:text="虹包账户预充值"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/qryDetails"
        android:id="@+id/precharge"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/u349"
        android:text="充值订单激活"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/precharge"
        android:id="@+id/activate"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/u349"
        android:text="充值订单撤销"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/activate"
        android:id="@+id/chargerevoke"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
