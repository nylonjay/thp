<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thp.csii.com.activities.AuthenticationActivity">

    <TextView
        android:id="@+id/authen_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:text="@string/authentication_desc"/>
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:layout_below="@+id/authen_desc"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:inputType="number"
        android:gravity="center_vertical"
        android:maxLength="19"
        android:textSize="14dp"
        android:hint="请输入购物卡前19位卡号"/>

    <com.csii.powerenter.PEEditText
        android:id="@+id/ed_number"
        android:layout_width="match_parent"
        android:layout_below="@+id/ed_name"
        android:layout_height="@dimen/unit_height"
        android:gravity="center_vertical"
        android:textSize="14dp"
        android:background="@drawable/peed_border"
        android:textColorHint="@color/text_gray"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="16dp"
        android:hint="请输入购物卡覆膜密码"/>
    <LinearLayout
        android:id="@+id/read_checkbox"
        android:layout_below="@+id/ed_number"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <CheckBox
        android:id="@+id/check_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textColor="@color/text_gray"
        android:textSize="12dp"
        android:text="我已经阅读"
        style="@style/CustomCheckboxTheme"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:textColor="@color/text_gray"
            android:text="我已经阅读并同意"/>
        <TextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/red"
            android:text="天虹购物卡使用协议"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/next_step_gray"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:layout_below="@+id/read_checkbox"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/unbind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_height"
        android:background="@drawable/u349"
        android:text="解除绑定"
        android:textColor="@color/white"
        android:layout_below="@+id/submit"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/worm_invacation"
        android:textColor="@color/text_gray"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/submit"/>


    <ImageView
        android:id="@+id/img_bottom"
        android:layout_width="wrap_content"
        android:layout_above="@+id/tv_bottom"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tiecard"/>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="此涂层覆盖的为购物卡覆膜密码"
        android:textColor="@color/text_red"
        android:layout_alignLeft="@+id/img_bottom"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
